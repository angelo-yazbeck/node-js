<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Movies</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f2f2f2;
        }

        .container {
            text-align: center;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .movie-list {
            max-width: 800px;
            margin: 0 auto;
        }

        h1 {
            color: #333;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            margin-bottom: 20px;
            padding: 20px;
        }

        h2 {
            color: #007bff;
        }

        p {
            margin: 10px 0;
        }

        .add-to-wishlist-btn {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }

            .add-to-wishlist-btn:hover {
                background-color: #45a049;
            }

        header {
            width: 100%;
            background-color: #333;
            padding: 0px 0; /* Decrease the top and bottom padding */
            text-align: center;
            position: fixed;
            top: 0;
            z-index: 1000;
            font-family: "Poppins", sans-serif;
        }

        nav {
            width: 100%;
            background-color: #333; /* Set the background color to black */
            padding: 0px 0;
            text-align: center;
            position: fixed;
            top: 0;
            z-index: 1000;
            font-family: "Poppins", sans-serif;
        }

            nav ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
                justify-content: center;

            }

            nav li {
                margin: 0 15px;
            }

            nav a {
                text-decoration: none;
                color: #fff; /* Set the default text color to white */
                font-size: 18px; /* Increase the font size */
                font-weight: bold;
                transition: color 0.3s ease;
                font-family: "Poppins", sans-serif;
            }

                nav a:hover {
                    color: #3498db;
                }

               

    </style>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Services</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
    </header>
    <div class="course-list">
        <h1>Courses Grades</h1>
        <ul>
            <% if (Array.isArray(courses)) { %>
            <% courses.forEach(course => { %>
            <li>
                <p><strong>Course Name: </strong> <%= course.course_name %></p>
                <p><strong>Course Grade: </strong> <%= course. grade %> </p>


            </li>
            <% }); %>
            <% } else { %>
            <h>No courses available</h>
            <% } %>
        </ul>
    </div>



    <script>


    </script>
</body>
</html>
